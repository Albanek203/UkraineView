@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
}

    <div class="container">
        <section class="login-form">
            @using (Html.BeginForm("OnPostAsync")) {
            <h1>@ViewData["Title"]</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="flex-row">
                <label class="lf-label" for="email">
                    <img src="/Images/Icons/user-gray.png" class="icon" />
                </label>
                <input id="email" class="lf-input" placeholder="E-mail" type="text" asp-for="Input.Email" autocomplete="email" aria-required="true">
            </div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>

            <div class="flex-row">
                <label class="lf-label" for="password">
                    <img src="/Images/Icons/lock-gray.png" class="icon" />
                </label>
                <input id="password" class="lf-input" placeholder="Password" type="password" asp-for="Input.Password" autocomplete="current-password" aria-required="true">
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>

            <div class="mt-3">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <input id="login-submit" class="lf-submit" type="submit" value="LOGIN">

                <div class="mt-3">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                </p>
                <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                </p>
            </div>
        }
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
