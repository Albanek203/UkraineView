@model IReadOnlyCollection<User>

@{
    var userManager = ViewData["userManager"] as UserManager<User>;
    var resultPhone = "Null";
    var resultGender = string.Empty;
}

@if (!Model.Equals(null)) {
    <div class="card drop-shadow-gray-1 mt-4 mb-4 border-radius-1">
        <div class="card-body user-list-card">
            <div class="col-3-xxxl col-xl-3 col-lg-3 col-12 form-group mt-3">
                <input type="text" placeholder="Search by Name ..." class="form-control">
            </div>

            <div class="table-responsive mt-4">
                <table class="table table-striped text-nowrap border">
                    <thead>
                    <tr>
                        <th style="width: 35px;">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input checkAll">
                            </div>
                        </th>
                        <th>Photo</th>
                        <th class="sorting">Nickname</th>
                        <th class="sorting">Role</th>
                        <th class="sorting">Gender</th>
                        <th class="sorting">Date Of Birth</th>
                        <th class="sorting">Phone</th>
                        <th class="sorting">E-mail</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody class="user-tbody">
                    @{
                        foreach (var user in Model) {
                            <tr>
                                <td>
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input">
                                    </div>
                                </td>
                                <td class="text-center">
                                    @if (string.IsNullOrWhiteSpace(user.Image?.Path)) {
                                        <i class="fa fa-question-circle avatar" aria-hidden="true"></i>
                                    }
                                    else {
                                        <img src="@user.Image?.Path" alt="User photo" class="avatar">
                                    }
                                </td>
                                <td>@user.NickName</td>
                                <td>@((await userManager!.GetRolesAsync(user)).FirstOrDefault())</td>
                                <td>
                                    @{
                                        resultGender = user.isMale ? "Male" : "Female";
                                    }
                                    @resultGender
                                </td>
                                <td>@user.BirthDay.ToString("dd MMMM yyyy")</td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(user.PhoneNumber)) { resultPhone = user.PhoneNumber; }
                                    @resultPhone
                                </td>
                                <td>@user.Email</td>
                                <td>
                                    <div class="dropdown">
                                        <span class="dots" data-bs-toggle="dropdown" aria-expanded="false"></span>
                                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                            <li>
                                                <a class="dropdown-item" href="#"><i class="fas fa-times mx-2 w-25"></i>Close</a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" href="#"><i class="fas fa-cogs mx-2 w-25"></i>Edit</a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" href="#"><i class="fas fa-redo-alt mx-2 w-25"></i>Refresh</a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>

            <div class="d-flex mt-1 w-100 overflow-auto">
                @if ((int)ViewData["ChunkCount"]! > 1) {
                    <button class="nav-page-btn bg-emerald-dark" data-element="1">1</button>
                    for (var i = 2; i <= (int)ViewData["ChunkCount"]!; i++) {
                        <button class="nav-page-btn" data-element="@i">@i</button>
                    }
                }
            </div>
        </div>
    </div>
}
else {
    <hr class="mt-3"/>
    <div class="title-text-table-center text-danger">Error<br/>User list is clear</div>
}